extends layouts/index.pug

block content
    .video-detail__container
        .video__player
            video(src=`/${detailVideo.fileUrl}`)
        .video__info
            if loggedUser && video.creator.id === loggedUser.id
            a(href="")
                button Edit Video
            h5.video__title=detailVideo.title
            p.video__description=detailVideo.description
            if detailVideo.views === 1
                span.video__views 1 views
            else
                span.video__views #{detailVideo.views} views
        .video__comments
            if detailVideo.comments.length === 1
                span.video__comment-number 1 comment
            else
                span.video__comment-number #{detailVideo.comments.length} comments
